@model ErrorViewModel

@{
    ViewData["Title"] = Model == null ? "Ocorreu um erro!" : Model.Title;
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ooops! Ocorreu um erro, no entanto não se preocupe. Nosso time será avisado e em seguida o erro será corrigido.</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}